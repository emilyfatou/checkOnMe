<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/colorBackground"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="Emergency Contacts"
            android:textColor="@color/colorText"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:background="@color/colorGray"
        android:layout_height="3dp" />

    <LinearLayout
        android:orientation="vertical"
        android:elevation="3dp"
        android:layout_width="match_parent"
        android:padding="24dp"
        android:background="@color/colorSecondBackground"
        android:layout_margin="10dp"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/contact1_name"
            android:layout_width="match_parent"
            android:hint="Name"
            android:inputType="text"
            android:textSize="20sp"
            android:background="@drawable/edit_text_background"
            android:drawableRight="@drawable/ic_person_black"
            android:padding="8dp"
            android:layout_height="40dp" />
        <EditText
            android:id="@+id/contact1_phone"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:hint="Phone Number"
            android:inputType="phone"
            android:textSize="20sp"
            android:background="@drawable/edit_text_background"
            android:drawableRight="@drawable/ic_phone_black"
            android:padding="8dp"
            android:layout_height="40dp" />
        <Spinner
            android:id="@+id/relationship1"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_background"
            android:layout_height="40dp">
        </Spinner>
        <EditText
            android:id="@+id/contact2_name"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:hint="Name"
            android:inputType="text"
            android:textSize="20sp"
            android:background="@drawable/edit_text_background"
            android:drawableRight="@drawable/ic_person_black"
            android:padding="8dp"
            android:layout_height="40dp" />
        <EditText
            android:id="@+id/contact2_phone"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:hint="Phone Number"
            android:inputType="phone"
            android:textSize="20sp"
            android:background="@drawable/edit_text_background"
            android:drawableRight="@drawable/ic_phone_black"
            android:padding="8dp"
            android:layout_height="40dp" />
        <Spinner
            android:id="@+id/relationship2"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_background"
            android:layout_height="40dp">
        </Spinner>
        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:text="SET EMERGENCY CONTACTS"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:background="@drawable/button_background"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>