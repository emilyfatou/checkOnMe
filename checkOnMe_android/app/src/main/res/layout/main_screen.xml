<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/colorBackground"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="Home"
            android:textColor="@color/colorText"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_height="wrap_content" />

    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:background="@color/colorGray"
        android:layout_height="3dp" />

    <RelativeLayout
        android:elevation="3dp"
        android:padding="48dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@color/colorSecondBackground"
        android:layout_margin="10dp"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/send_message"
            android:layout_width="match_parent"
            android:text="Text Contacts"
            android:textSize="24sp"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:background="@drawable/home_buttons_background"
            android:layout_height="60dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_below="@+id/send_message"
            android:layout_marginTop="10dp"
            android:text="Send SMS text to your emergency contacts"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/emergency"
            android:layout_below="@+id/send_message"
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:text="EMS"
            android:textSize="24sp"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:background="@drawable/home_buttons_background"
            android:layout_height="60dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_below="@+id/emergency"
            android:layout_marginTop="10dp"
            android:text="Send an emergency text, containing your location, to 911 and your emergency contacts"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/final_destination"
            android:layout_below="@+id/emergency"
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:text="Arrived at hospital"
            android:textSize="24sp"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:background="@drawable/home_buttons_background"
            android:layout_height="60dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_below="@+id/final_destination"
            android:layout_marginTop="10dp"
            android:text="Send your emergency contacts the location of the hospital you have been admitted to"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>